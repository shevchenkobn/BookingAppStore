@model NavigationApp.Models.Player

@{
    ViewBag.Title = "Create";
}



<h2>Create</h2>
@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Age, new { @class = "col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Age, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Position, new { @class = "col-md-2"  })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Position, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.TeamId, "Team", new { @class = "col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.TeamId, ViewBag.Teams as SelectList)
        </div>
    </div>
    <input class="btn btn-lg" type="submit" value="Add this man" />
}
<div>
    @Html.ActionLink("To List", "Index")
</div>


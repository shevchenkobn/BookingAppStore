@model BookingAppStore.Models.Purchase

    @using (Html.BeginForm("Buy", "Home", FormMethod.Post))
    {
        @*<input type="hidden" value="@ViewBag.BookId" name="BookId" />*@
        @Html.Hidden("BookId", Model.BookId)
        <div class="form-inline">
            <div class="form-group">
                @Html.LabelFor(m=>m.Person, "Name:")
                @Html.TextBoxFor(m=>m.Person, Model.Person)
            </div>
            <div class="form-group">
                @Html.LabelFor(m=>m.Address, "Address:")
                @Html.TextBoxFor(m => m.Address, "Enter your address")
            </div>
            <button type="submit" class="btn btn-info">Submit</button>
        </div>
    }
